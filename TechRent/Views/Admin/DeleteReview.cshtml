@model TechRent.Models.Entities.Review
@{
    ViewData["Title"] = "Delete Review";
    ViewData["css"] = "admin";
}

<main class="main-content">
    <div class="wrapper">
        <div class="breadcrumb">
            <a asp-action="Reviews" class="breadcrumb-link">Admin</a>
            <span class="material-symbols-outlined">chevron_right</span>
            <span class="breadcrumb-current">Delete Review</span>
        </div>

        <div class="delete-container">
            <div class="delete-card" style="max-width: 500px;">
                <div class="delete-icon">
                    <span class="material-symbols-outlined" style="font-size: 48px; color: #ef4444;">warning</span>
                </div>

                <h1 class="delete-title">Delete Review</h1>

                <p class="delete-text">
                    Are you sure you want to delete this review?
                    This action cannot be undone.
                </p>

                <div class="delete-details">
                    <div class="detail-item">
                        <span class="detail-label">ID:</span>
                        <span class="detail-value">#@Model.Id.ToString("D3")</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">User:</span>
                        <span class="detail-value">@(Model.User?.Email ?? "Unknown User")</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Equipment:</span>
                        <span class="detail-value">@(Model.Equipment?.Name ?? $"Equipment #{Model.EquipmentId}")</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Rating:</span>
                        <span class="detail-value">
                            <div class="rating" style="display: flex; align-items: center; gap: 2px;">
                                @for (int i = 0; i < 5; i++)
                                {
                                    if (i < Model.Rating)
                                    {
                                        <span class="material-symbols-outlined" style="color: #fbbf24; font-size: 18px; font-variation-settings: 'FILL' 1;">star</span>
                                    }
                                    else
                                    {
                                        <span class="material-symbols-outlined" style="color: #cbd5e1; font-size: 18px; font-variation-settings: 'FILL' 1;">star</span>
                                    }
                                }
                                <span style="margin-left: 4px;">@Model.Rating/5</span>
                            </div>
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Date:</span>
                        <span class="detail-value">@Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</span>
                    </div>
                    <div class="detail-item" style="flex-direction: column; align-items: flex-start; gap: 4px;">
                        <span class="detail-label">Comment:</span>
                        <span class="detail-value" style="white-space: pre-wrap; word-break: break-word; background: #f8fafc; padding: 12px; border-radius: 8px; width: 100%;">
                            @if (!string.IsNullOrEmpty(Model.Comment))
                            {
                                @Model.Comment
                            }
                            else
                            {
                                <span class="text-muted">No comment provided</span>
                            }
                        </span>
                    </div>
                </div>

                <form asp-action="DeleteReview" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="delete-actions">
                        <button type="submit" class="delete-button-confirm">
                            <span class="material-symbols-outlined">delete</span>
                            Delete Permanently
                        </button>

                        <a asp-action="Reviews" class="delete-button-cancel">
                            <span class="material-symbols-outlined">close</span>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<style>
    .text-muted {
        color: #94a3b8;
        font-style: italic;
    }

    .rating {
        display: flex;
        align-items: center;
        gap: 2px;
    }
</style>