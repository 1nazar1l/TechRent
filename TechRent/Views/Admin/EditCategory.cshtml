@model TechRent.Models.Entities.Category
@{
    ViewData["Title"] = "Edit Category";
    ViewData["css"] = "admin";
}

<main class="main-content">
    <div class="wrapper">
        <div class="breadcrumb">
            <a asp-action="Categories" class="breadcrumb-link">Admin</a>
            <span class="material-symbols-outlined">chevron_right</span>
            <span class="breadcrumb-current">Edit Category</span>
        </div>

        <div class="form-container">
            <div class="form-card" style="max-width: 600px;">
                <div class="form-header">
                    <h1 class="form-title">Edit Category</h1>
                    <p class="form-subtitle">Update category information</p>
                </div>

                <form asp-action="EditCategory" method="post" class="edit-form">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-input" placeholder="Enter category name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-textarea" rows="3" placeholder="Enter category description (optional)"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DisplayOrder" class="form-label">Display Order</label>
                        <input asp-for="DisplayOrder" class="form-input" type="number" min="0" placeholder="Enter display order" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="save-button">
                            <span class="material-symbols-outlined">save</span>
                            Save Changes
                        </button>

                        <a asp-action="Categories" class="cancel-button">
                            <span class="material-symbols-outlined">close</span>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}