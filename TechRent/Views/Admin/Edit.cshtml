@model TechRent.Models.Entities.Equipment
@{
    ViewData["Title"] = "Edit Equipment";
    ViewData["css"] = "admin";
}

<main class="main-content">
    <div class="wrapper">
        <div class="breadcrumb">
            <a asp-action="Index" class="breadcrumb-link">Admin</a>
            <span class="material-symbols-outlined">chevron_right</span>
            <span class="breadcrumb-current">Edit Equipment</span>
        </div>

        <div class="form-container">
            <div class="form-card">
                <div class="form-header">
                    <h1 class="form-title">Edit Equipment</h1>
                    <p class="form-subtitle">Update equipment information</p>
                </div>

                <form asp-action="Edit" method="post" class="edit-form">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-grid">
                        <!-- Left Column -->
                        <div class="form-column">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-input" placeholder="Enter equipment name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Type" class="form-label"></label>
                                <select asp-for="Type" class="form-select">
                                    <option value="">Select category</option>
                                    <option value="Earthmoving">Earthmoving</option>
                                    <option value="Aerial Lifts">Aerial Lifts</option>
                                    <option value="Compaction">Compaction</option>
                                    <option value="Material Handling">Material Handling</option>
                                    <option value="Power Tools">Power Tools</option>
                                    <option value="Concrete">Concrete</option>
                                    <option value="Lighting">Lighting</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-textarea" rows="4" placeholder="Enter equipment description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="form-column">
                            <div class="form-group">
                                <label asp-for="PricePerDay" class="form-label"></label>
                                <div class="price-input-group">
                                    <span class="price-currency">$</span>
                                    <input asp-for="PricePerDay" class="form-input price-input" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="PricePerDay" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Deposit" class="form-label"></label>
                                <div class="price-input-group">
                                    <span class="price-currency">$</span>
                                    <input asp-for="Deposit" class="form-input price-input" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Deposit" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="AvailableQuantity" class="form-label"></label>
                                <input asp-for="AvailableQuantity" class="form-input" type="number" min="0" placeholder="Enter quantity" />
                                <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ImageUrl" class="form-label"></label>
                                <input asp-for="ImageUrl" class="form-input" placeholder="Enter image URL" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="image-preview">
                                    <img src="@Model.ImageUrl" alt="Preview" class="preview-img" />
                                </div>
                            }
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="save-button">
                            <span class="material-symbols-outlined">save</span>
                            Save Changes
                        </button>

                        <a asp-action="Index" class="cancel-button">
                            <span class="material-symbols-outlined">close</span>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}