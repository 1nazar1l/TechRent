@model TechRent.Models.Entities.Review
@{
    ViewData["Title"] = "Create Review";
    ViewData["css"] = "admin";
}

<main class="main-content">
    <div class="wrapper">
        <div class="breadcrumb">
            <a asp-action="Reviews" class="breadcrumb-link">Admin</a>
            <span class="material-symbols-outlined">chevron_right</span>
            <span class="breadcrumb-current">Create Review</span>
        </div>

        <div class="form-container">
            <div class="form-card" style="max-width: 600px;">
                <div class="form-header">
                    <h1 class="form-title">Create New Review</h1>
                    <p class="form-subtitle">Add a new review to the system</p>
                </div>

                <form asp-action="CreateReview" method="post" class="edit-form">
                    <div class="form-group">
                        <label class="form-label">User</label>
                        <select name="UserId" class="form-select" required>
                            <option value="">Select user</option>
                            @foreach (var user in ViewBag.Users)
                            {
                                <option value="@user.Id">@user.Email</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Equipment</label>
                        <select name="EquipmentId" class="form-select" required>
                            <option value="">Select equipment</option>
                            @foreach (var equipment in ViewBag.Equipments)
                            {
                                <option value="@equipment.Id">@equipment.Name</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Rating</label>
                        <div class="rating-input" style="display: flex; gap: 8px; align-items: center; margin-bottom: 8px;">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <label style="cursor: pointer;">
                                    <input type="radio" name="Rating" value="@i" style="display: none;" @(i == 5 ? "checked" : "") />
                                    <span class="material-symbols-outlined rating-star" style="font-size: 32px; color: #cbd5e1; font-variation-settings: 'FILL' 1;">star</span>
                                </label>
                            }
                            <span style="margin-left: 8px; font-weight: 600;" id="ratingValue">5/5</span>
                        </div>
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Comment" class="form-label"></label>
                        <textarea asp-for="Comment" class="form-textarea" rows="4" placeholder="Enter review comment"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="save-button">
                            <span class="material-symbols-outlined">add</span>
                            Create Review
                        </button>

                        <a asp-action="Reviews" class="cancel-button">
                            <span class="material-symbols-outlined">close</span>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Star rating functionality
        document.querySelectorAll('.rating-star').forEach(star => {
            star.addEventListener('mouseenter', function() {
                const rating = this.parentElement.querySelector('input').value;
                highlightStars(rating);
            });

            star.addEventListener('mouseleave', function() {
                const checked = document.querySelector('input[name="Rating"]:checked');
                const rating = checked ? checked.value : 5;
                highlightStars(rating);
            });

            star.parentElement.addEventListener('click', function(e) {
                const radio = this.querySelector('input');
                radio.checked = true;
                highlightStars(radio.value);
                document.getElementById('ratingValue').textContent = radio.value + '/5';
            });
        });

        function highlightStars(rating) {
            document.querySelectorAll('.rating-star').forEach((star, index) => {
                if (index < rating) {
                    star.style.color = '#fbbf24';
                } else {
                    star.style.color = '#cbd5e1';
                }
            });
        }

        // Set initial state
        highlightStars(5);
    </script>

    <style>
        .rating-star {
            transition: color 0.2s ease;
            cursor: pointer;
        }

            .rating-star:hover {
                transform: scale(1.1);
            }
    </style>
}