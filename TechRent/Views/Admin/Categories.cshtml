@model IEnumerable<TechRent.Models.Entities.Category>
@{
    ViewData["Title"] = "Categories Management";
    ViewData["css"] = "admin";
}

<main class="main-content">
    <div class="wrapper">
        <!-- Breadcrumb & Title -->
        <div class="breadcrumb">
            <a href="#" class="breadcrumb-link">Admin</a>
            <span class="material-symbols-outlined">chevron_right</span>
            <span class="breadcrumb-current">Categories Management</span>
        </div>

        <div class="page-header">
            <h1 class="page-title">Categories Management</h1>
            <button class="add-button" onclick="location.href='@Url.Action("CreateCategory", "Admin")'">
                <span class="material-symbols-outlined">add</span>
                Add New Category
            </button>
        </div>

        <!-- Admin Layout -->
        <div class="admin-layout">
            <!-- Filters Sidebar -->
            <aside class="admin-filters">
                <div class="filters-header">
                    <h2 class="filters-title">Filters</h2>
                    <button class="reset-button" onclick="location.href='@Url.Action("Categories")'">Reset All</button>
                </div>

                <form method="get" id="filterForm">
                    <!-- Search Filter -->
                    <div class="filters-group">
                        <label class="filter-label">Search</label>
                        <div class="filter-search">
                            <span class="filter-search-icon material-symbols-outlined">search</span>
                            <input type="text" name="searchString" class="filter-search-input" placeholder="Category name..." value="@ViewBag.SearchString">
                        </div>
                    </div>

                    <!-- Display Order Range -->
                    <div class="filters-group">
                        <label class="filter-label">Display Order</label>
                        <div class="price-inputs">
                            <div class="price-field">
                                <input type="number" name="minDisplayOrder" class="price-input" value="@ViewBag.MinDisplayOrder" placeholder="Min">
                            </div>
                            <span class="price-separator">-</span>
                            <div class="price-field">
                                <input type="number" name="maxDisplayOrder" class="price-input" value="@ViewBag.MaxDisplayOrder" placeholder="Max">
                            </div>
                        </div>
                    </div>

                    <!-- Equipment Count Filter -->
                    <div class="filters-group">
                        <label class="filter-label">Equipment Count</label>
                        <div class="checkbox-list">
                            <label class="checkbox-item">
                                <span class="checkbox-box">
                                    <input type="checkbox" name="hasEquipment" class="checkbox-input" value="true" @(ViewBag.HasEquipment == true ? "checked" : "")>
                                    <span class="checkbox-check material-symbols-outlined">check</span>
                                </span>
                                <span class="checkbox-text">Has equipment</span>
                            </label>
                            <label class="checkbox-item">
                                <span class="checkbox-box">
                                    <input type="checkbox" name="emptyCategories" class="checkbox-input" value="true" @(ViewBag.EmptyCategories == true ? "checked" : "")>
                                    <span class="checkbox-check material-symbols-outlined">check</span>
                                </span>
                                <span class="checkbox-text">Empty categories</span>
                            </label>
                        </div>
                    </div>

                    <!-- Hidden fields for pagination -->
                    <input type="hidden" name="page" value="1" />
                    <input type="hidden" name="pageSize" value="@ViewBag.PageSize" />

                    <!-- Submit button -->
                    <button type="submit" class="save-button" style="width: 100%; margin-top: 16px; justify-content: center;">
                        <span class="material-symbols-outlined">filter_alt</span>
                        Apply Filters
                    </button>
                </form>
            </aside>

            <!-- Table Section -->
            <section class="table-section">
                <!-- Toolbar -->
                <div class="table-toolbar">
                    <div class="results">
                        <span class="results-number">@Model.Count()</span>
                        <span class="results-text">categories total</span>
                    </div>

                    <div class="table-controls">
                        <div class="sort-field">
                            <span class="sort-label">Show:</span>
                            <select class="sort-select" onchange="changePageSize(this.value)">
                                <option value="10" selected="@(ViewBag.PageSize == 10)">10 items</option>
                                <option value="25" selected="@(ViewBag.PageSize == 25)">25 items</option>
                                <option value="50" selected="@(ViewBag.PageSize == 50)">50 items</option>
                                <option value="100" selected="@(ViewBag.PageSize == 100)">100 items</option>
                            </select>
                        </div>

                        <div class="divider"></div>

                        <div class="export-buttons">
                            <button class="icon-button" title="Export CSV">
                                <span class="material-symbols-outlined">download</span>
                            </button>
                            <button class="icon-button" title="Print">
                                <span class="material-symbols-outlined">print</span>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Table Wrapper -->
                <div class="table-wrapper">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th class="checkbox-cell">
                                    <label class="checkbox-box">
                                        <input type="checkbox" class="checkbox-input" id="select-all">
                                        <span class="checkbox-check material-symbols-outlined">check</span>
                                    </label>
                                </th>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Display Order</th>
                                <th>Equipment Count</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@(item.Equipments == null || !item.Equipments.Any() ? "inactive-row" : "")">
                                    <td class="checkbox-cell">
                                        <label class="checkbox-box">
                                            <input type="checkbox" class="checkbox-input">
                                            <span class="checkbox-check material-symbols-outlined">check</span>
                                        </label>
                                    </td>
                                    <td class="id-cell">#@item.Id.ToString()</td>
                                    <td class="name-cell">
                                        <div class="cell-content">
                                            <strong>@item.Name</strong>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <span>@item.Description</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge" style="background: #e2e8f0; color: #1e293b; padding: 4px 8px; border-radius: 20px;">
                                            @item.DisplayOrder
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.Equipments != null && item.Equipments.Any())
                                        {
                                            <span class="stock-badge stock-available">@item.Equipments.Count items</span>
                                        }
                                        else
                                        {
                                            <span class="stock-badge stock-out">No equipment</span>
                                        }
                                    </td>
                                    <td class="actions-cell">
                                        <div class="action-buttons">
                                            <button class="action-button edit-button" title="Edit" onclick="location.href='@Url.Action("EditCategory", "Admin", new { id = item.Id })'">
                                                <span class="material-symbols-outlined">edit</span>
                                            </button>
                                            <button class="action-button delete-button" title="Delete" onclick="location.href='@Url.Action("DeleteCategory", "Admin", new { id = item.Id })'">
                                                <span class="material-symbols-outlined">delete</span>
                                            </button>
                                            <button class="action-button view-button" title="View Equipment" onclick="location.href='@Url.Action("Index", "Admin", new { categoryId = item.Id })'">
                                                <span class="material-symbols-outlined">visibility</span>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="pagination">
                    <nav class="pagination-list">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <a href="@Url.Action("Categories", new { 
                                page = ViewBag.CurrentPage - 1, 
                                pageSize = ViewBag.PageSize,
                                searchString = ViewBag.SearchString,
                                minDisplayOrder = ViewBag.MinDisplayOrder,
                                maxDisplayOrder = ViewBag.MaxDisplayOrder,
                                hasEquipment = ViewBag.HasEquipment,
                                emptyCategories = ViewBag.EmptyCategories
                            })" class="pagination-link">
                                <span class="sr-only">Previous</span>
                                <span class="material-symbols-outlined">chevron_left</span>
                            </a>
                        }

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            if (i == ViewBag.CurrentPage)
                            {
                                <a href="#" class="pagination-link pagination-link-active">@i</a>
                            }
                            else
                            {
                                <a href="@Url.Action("Categories", new { 
                                    page = i, 
                                    pageSize = ViewBag.PageSize,
                                    searchString = ViewBag.SearchString,
                                    minDisplayOrder = ViewBag.MinDisplayOrder,
                                    maxDisplayOrder = ViewBag.MaxDisplayOrder,
                                    hasEquipment = ViewBag.HasEquipment,
                                    emptyCategories = ViewBag.EmptyCategories
                                })" class="pagination-link">@i</a>
                            }
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <a href="@Url.Action("Categories", new { 
                                page = ViewBag.CurrentPage + 1, 
                                pageSize = ViewBag.PageSize,
                                searchString = ViewBag.SearchString,
                                minDisplayOrder = ViewBag.MinDisplayOrder,
                                maxDisplayOrder = ViewBag.MaxDisplayOrder,
                                hasEquipment = ViewBag.HasEquipment,
                                emptyCategories = ViewBag.EmptyCategories
                            })" class="pagination-link">
                                <span class="sr-only">Next</span>
                                <span class="material-symbols-outlined">chevron_right</span>
                            </a>
                        }
                    </nav>
                </div>
            </section>
        </div>
    </div>
</main>

<style>
    .text-muted {
        color: #94a3b8;
        font-style: italic;
    }
</style>

<script>
    function changePageSize(pageSize) {
        var url = new URL(window.location.href);
        url.searchParams.set('pageSize', pageSize);
        url.searchParams.set('page', 1);
        window.location.href = url.toString();
    }
</script>