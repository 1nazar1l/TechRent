@model IEnumerable<TechRent.Models.Entities.Equipment>
@{
    ViewData["Title"] = "Админ панель";
    ViewData["css"] = "admin";
}

<main class="main-content">
    <div class="wrapper">
        <!-- Breadcrumb & Title -->
        <div class="breadcrumb">
            <a href="#" class="breadcrumb-link">Admin</a>
            <span class="material-symbols-outlined">chevron_right</span>
            <span class="breadcrumb-current">Equipment Management</span>
        </div>

        <div class="page-header">
            <h1 class="page-title">Equipment Management</h1>
            <button class="add-button" onclick="location.href='@Url.Action("Create", "Admin")'">
                <span class="material-symbols-outlined">add</span>
                Add New Equipment
            </button>
        </div>

        <!-- Admin Layout -->
        <div class="admin-layout">
            <!-- Filters Sidebar -->
            <aside class="admin-filters">
                <div class="filters-header">
                    <h2 class="filters-title">Filters</h2>
                    <button class="reset-button">Reset All</button>
                </div>

                <!-- Search Filter -->
                <div class="filters-group">
                    <label class="filter-label">Search</label>
                    <div class="filter-search">
                        <span class="filter-search-icon material-symbols-outlined">search</span>
                        <input type="text" class="filter-search-input" placeholder="Name, ID, category...">
                    </div>
                </div>

                <!-- Category Filter -->
                <div class="filters-group">
                    <label class="filter-label">Category</label>
                    <div class="filter-select">
                        <select class="filter-select-input">
                            <option>All Categories</option>
                            @foreach (var category in ViewBag.Categories)
                            {
                                <option value="@category.Name">@category.Name</option>
                            }
                        </select>
                        <span class="filter-select-icon material-symbols-outlined">expand_more</span>
                    </div>
                </div>

                <!-- Status Filter -->
                <div class="filters-group">
                    <label class="filter-label">Status</label>
                    <div class="checkbox-list">
                        <label class="checkbox-item">
                            <span class="checkbox-box">
                                <input type="checkbox" class="checkbox-input" checked>
                                <span class="checkbox-check material-symbols-outlined">check</span>
                            </span>
                            <span class="checkbox-text">Available</span>
                        </label>
                        <label class="checkbox-item">
                            <span class="checkbox-box">
                                <input type="checkbox" class="checkbox-input">
                                <span class="checkbox-check material-symbols-outlined">check</span>
                            </span>
                            <span class="checkbox-text">Low Stock</span>
                        </label>
                        <label class="checkbox-item">
                            <span class="checkbox-box">
                                <input type="checkbox" class="checkbox-input">
                                <span class="checkbox-check material-symbols-outlined">check</span>
                            </span>
                            <span class="checkbox-text">Out of Stock</span>
                        </label>
                    </div>
                </div>

                <!-- Price Range -->
                <div class="filters-group">
                    <label class="filter-label">Price Range ($)</label>
                    <div class="price-inputs">
                        <div class="price-field">
                            <span class="price-currency">$</span>
                            <input type="number" class="price-input" value="0" placeholder="Min">
                        </div>
                        <span class="price-separator">-</span>
                        <div class="price-field">
                            <span class="price-currency">$</span>
                            <input type="number" class="price-input" value="1000" placeholder="Max">
                        </div>
                    </div>
                </div>

                <!-- Rating Filter -->
                <div class="filters-group">
                    <label class="filter-label">Minimum Rating</label>
                    <div class="filter-select">
                        <select class="filter-select-input">
                            <option>All ratings</option>
                            <option>5 stars</option>
                            <option>4+ stars</option>
                            <option>3+ stars</option>
                            <option>2+ stars</option>
                        </select>
                        <span class="filter-select-icon material-symbols-outlined">expand_more</span>
                    </div>
                </div>

                <!-- Availability Toggle -->
                <div class="filters-group">
                    <label class="toggle">
                        <span class="toggle-text">Show only in stock</span>
                        <div class="relative">
                            <input type="checkbox" class="toggle-input">
                            <div class="toggle-switch"></div>
                        </div>
                    </label>
                </div>
            </aside>

            <!-- Table Section -->
            <section class="table-section">
                <!-- Toolbar -->
                <div class="table-toolbar">
                    <div class="results">
                        <span class="results-number">@Model.Count()</span>
                        <span class="results-text">items total</span>
                    </div>

                    <div class="table-controls">
                        <div class="sort-field">
                            <span class="sort-label">Show:</span>
                            <select class="sort-select">
                                <option>10 items</option>
                                <option>25 items</option>
                                <option>50 items</option>
                                <option>100 items</option>
                            </select>
                        </div>

                        <div class="divider"></div>

                        <div class="export-buttons">
                            <button class="icon-button" title="Export CSV">
                                <span class="material-symbols-outlined">download</span>
                            </button>
                            <button class="icon-button" title="Print">
                                <span class="material-symbols-outlined">print</span>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Table Wrapper with horizontal scroll -->
                <div class="table-wrapper">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th class="checkbox-cell">
                                    <label class="checkbox-box">
                                        <input type="checkbox" class="checkbox-input" id="select-all">
                                        <span class="checkbox-check material-symbols-outlined">check</span>
                                    </label>
                                </th>
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Price/day</th>
                                <th>Stock</th>
                                <th>Status</th>
                                <th>Rating</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var averageRating = item.Reviews != null && item.Reviews.Any()
                                ? item.Reviews.Average(r => r.Rating).ToString("F1")
                                : "—";
                                var reviewCount = item.Reviews?.Count ?? 0;

                                <tr class="@(item.AvailableQuantity == 0 ? "inactive-row" : "")">
                                    <td class="checkbox-cell">
                                        <label class="checkbox-box">
                                            <input type="checkbox" class="checkbox-input">
                                            <span class="checkbox-check material-symbols-outlined">check</span>
                                        </label>
                                    </td>
                                    <td class="id-cell">#@item.Id.ToString("D3")</td>
                                    <td class="image-cell">
                                        <div class="table-image">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" alt="@item.Name">
                                            }
                                            else
                                            {
                                                <div class="no-image">No image</div>
                                            }
                                        </div>
                                    </td>
                                    <td class="name-cell">
                                        <div class="cell-content">
                                            <strong>@item.Name</strong>
                                            @if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                <span class="cell-description">@item.Description</span>
                                            }
                                        </div>
                                    </td>
                                    <td>@item.Category?.Name</td>
                                    <td class="price-cell">$@item.PricePerDay.ToString("F0")</td>
                                    <td class="stock-cell">
                                        @if (item.AvailableQuantity > 5)
                                        {
                                            <span class="stock-badge stock-available">@item.AvailableQuantity in stock</span>
                                        }
                                        else if (item.AvailableQuantity > 0)
                                        {
                                            <span class="stock-badge stock-low">@item.AvailableQuantity in stock</span>
                                        }
                                        else
                                        {
                                            <span class="stock-badge stock-out">0 in stock</span>
                                        }
                                    </td>
                                    <td class="status-cell">
                                        @if (item.IsAvailable)
                                        {
                                            <span class="status-badge status-active">Active</span>
                                        }
                                        else
                                        {
                                            <span class="status-badge status-inactive">Inactive</span>
                                        }
                                    </td>
                                    <td class="rating-cell">
                                        <div class="rating">
                                            @if (averageRating != "—")
                                            {
                                                <div style="display: flex; align-items: center; gap: 4px;">
                                                    <span class="star-icon material-symbols-outlined" style="color: #fbbf24;">star</span>
                                                    <span style="font-weight: 600;">@averageRating</span>
                                                    <span style="color: #64748b; font-size: 12px;">(@reviewCount)</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">—</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="actions-cell">
                                        <div class="action-buttons">
                                            <button class="action-button edit-button" title="Edit" onclick="location.href='@Url.Action("Edit", "Admin", new { id = item.Id })'">
                                                <span class="material-symbols-outlined">edit</span>
                                            </button>
                                            <button class="action-button delete-button" title="Delete" onclick="location.href='@Url.Action("Delete", "Admin", new { id = item.Id })'">
                                                <span class="material-symbols-outlined">delete</span>
                                            </button>
                                            <button class="action-button view-button" title="View Reviews" onclick="location.href='@Url.Action("Reviews", "Admin", new { equipmentId = item.Id })'">
                                                <span class="material-symbols-outlined">visibility</span>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="pagination">
                    <nav class="pagination-list">
                        <a href="#" class="pagination-link">
                            <span class="sr-only">Previous</span>
                            <span class="material-symbols-outlined">chevron_left</span>
                        </a>
                        <a href="#" class="pagination-link pagination-link-active">1</a>
                        <a href="#" class="pagination-link">2</a>
                        <a href="#" class="pagination-link">3</a>
                        <a href="#" class="pagination-link">4</a>
                        <a href="#" class="pagination-link">5</a>
                        <span class="pagination-ellipsis">...</span>
                        <a href="#" class="pagination-link">12</a>
                        <a href="#" class="pagination-link">
                            <span class="sr-only">Next</span>
                            <span class="material-symbols-outlined">chevron_right</span>
                        </a>
                    </nav>
                </div>
            </section>
        </div>
    </div>
</main>

<style>
    .text-muted {
        color: #94a3b8;
        font-style: italic;
    }

    .rating {
        display: flex;
        align-items: center;
    }

    .star-icon {
        font-size: 18px;
        font-variation-settings: 'FILL' 1;
    }
</style>