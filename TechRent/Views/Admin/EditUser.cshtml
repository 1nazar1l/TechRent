@using Microsoft.AspNetCore.Identity
@model IdentityUser
@{
    ViewData["Title"] = "Edit User";
    ViewData["css"] = "admin";
}

@inject UserManager<IdentityUser> UserManager

@{
    var roles = await UserManager.GetRolesAsync(Model);
    var currentRole = roles.FirstOrDefault() ?? "User";
    var allRoles = new[] { "Admin", "User" };
}

<main class="main-content">
    <div class="wrapper">
        <div class="breadcrumb">
            <a asp-action="Users" class="breadcrumb-link">Admin</a>
            <span class="material-symbols-outlined">chevron_right</span>
            <span class="breadcrumb-current">Edit User</span>
        </div>

        <div class="form-container">
            <div class="form-card" style="max-width: 600px;">
                <div class="form-header">
                    <h1 class="form-title">Edit User</h1>
                    <p class="form-subtitle">Update user information and role</p>
                </div>

                <form asp-action="EditUser" method="post" class="edit-form">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <input class="form-input" value="@Model.Email" readonly disabled style="background: #f1f5f9;" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Username</label>
                        <input class="form-input" value="@Model.UserName" readonly disabled style="background: #f1f5f9;" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-input" placeholder="Enter phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Role</label>
                        <select name="role" class="form-select">
                            @foreach (var role in allRoles)
                            {
                                if (role == currentRole)
                                {
                                    <option value="@role" selected>@role</option>
                                }
                                else
                                {
                                    <option value="@role">@role</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="toggle" style="justify-content: space-between; width: 100%;">
                            <span class="toggle-text">Email Confirmed</span>
                            <div class="relative">
                                <input type="checkbox" class="toggle-input" name="emailConfirmed" value="true" @(Model.EmailConfirmed ? "checked" : "") />
                                <div class="toggle-switch"></div>
                            </div>
                        </label>
                    </div>

                    <div class="form-group">
                        <label class="toggle" style="justify-content: space-between; width: 100%;">
                            <span class="toggle-text">Phone Number Confirmed</span>
                            <div class="relative">
                                <input type="checkbox" class="toggle-input" name="phoneNumberConfirmed" value="true" @(Model.PhoneNumberConfirmed ? "checked" : "") />
                                <div class="toggle-switch"></div>
                            </div>
                        </label>
                    </div>

                    <div class="form-group">
                        <label class="toggle" style="justify-content: space-between; width: 100%;">
                            <span class="toggle-text">Two Factor Enabled</span>
                            <div class="relative">
                                <input type="checkbox" class="toggle-input" name="twoFactorEnabled" value="true" @(Model.TwoFactorEnabled ? "checked" : "") />
                                <div class="toggle-switch"></div>
                            </div>
                        </label>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="save-button">
                            <span class="material-symbols-outlined">save</span>
                            Save Changes
                        </button>

                        <a asp-action="Users" class="cancel-button">
                            <span class="material-symbols-outlined">close</span>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}