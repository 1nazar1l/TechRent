@using Microsoft.AspNetCore.Identity
@model IEnumerable<TechRent.Models.Entities.Review>
@{
    ViewData["Title"] = "Reviews Management";
    ViewData["css"] = "admin";
}

<main class="main-content">
    <div class="wrapper">
        <!-- Breadcrumb & Title -->
        <div class="breadcrumb">
            <a href="#" class="breadcrumb-link">Admin</a>
            <span class="material-symbols-outlined">chevron_right</span>
            <span class="breadcrumb-current">Reviews Management</span>
        </div>

        <div class="page-header">
            <h1 class="page-title">Reviews Management</h1>
            <button class="add-button" onclick="location.href='@Url.Action("CreateReview", "Admin")'">
                <span class="material-symbols-outlined">add</span>
                Add New Review
            </button>
        </div>

        <!-- Admin Layout -->
        <div class="admin-layout">
            <!-- Filters Sidebar -->
            <aside class="admin-filters">
                <div class="filters-header">
                    <h2 class="filters-title">Filters</h2>
                    <button class="reset-button" onclick="location.href='@Url.Action("Reviews")'">Reset All</button>
                </div>

                <form method="get" id="filterForm">
                    <!-- Search Filter -->
                    <div class="filters-group">
                        <label class="filter-label">Search</label>
                        <div class="filter-search">
                            <span class="filter-search-icon material-symbols-outlined">search</span>
                            <input type="text" name="searchString" class="filter-search-input" placeholder="Comment, user or equipment..." value="@ViewBag.SearchString">
                        </div>
                    </div>

                    <!-- Rating Filter -->
                    <div class="filters-group">
                        <label class="filter-label">Rating</label>
                        <div class="filter-select">
                            <select name="rating" class="filter-select-input">
                                <option value="" selected="@(ViewBag.SelectedRating == null)">All ratings</option>
                                <option value="5" selected="@(ViewBag.SelectedRating == 5)">5 stars</option>
                                <option value="4" selected="@(ViewBag.SelectedRating == 4)">4 stars</option>
                                <option value="3" selected="@(ViewBag.SelectedRating == 3)">3 stars</option>
                                <option value="2" selected="@(ViewBag.SelectedRating == 2)">2 stars</option>
                                <option value="1" selected="@(ViewBag.SelectedRating == 1)">1 star</option>
                            </select>
                            <span class="filter-select-icon material-symbols-outlined">expand_more</span>
                        </div>
                    </div>

                    <!-- Date Range -->
                    <div class="filters-group">
                        <label class="filter-label">Date Range</label>
                        <div class="price-inputs" style="flex-direction: column; gap: 8px;">
                            <div class="price-field" style="width: 100%;">
                                <span class="price-currency">From</span>
                                <input type="date" name="dateFrom" class="price-input" style="padding-left: 50px;" value="@ViewBag.DateFrom">
                            </div>
                            <div class="price-field" style="width: 100%;">
                                <span class="price-currency">To</span>
                                <input type="date" name="dateTo" class="price-input" style="padding-left: 50px;" value="@ViewBag.DateTo">
                            </div>
                        </div>
                    </div>

                    <!-- Has Comment Filter -->
                    <div class="filters-group">
                        <label class="filter-label">Comment</label>
                        <div class="checkbox-list">
                            <label class="checkbox-item">
                                <span class="checkbox-box">
                                    <input type="checkbox" name="hasComment" class="checkbox-input" value="true" @(ViewBag.HasComment == true ? "checked" : "")>
                                    <span class="checkbox-check material-symbols-outlined">check</span>
                                </span>
                                <span class="checkbox-text">Has comment</span>
                            </label>
                            <label class="checkbox-item">
                                <span class="checkbox-box">
                                    <input type="checkbox" name="noComment" class="checkbox-input" value="true" @(ViewBag.NoComment == true ? "checked" : "")>
                                    <span class="checkbox-check material-symbols-outlined">check</span>
                                </span>
                                <span class="checkbox-text">No comment</span>
                            </label>
                        </div>
                    </div>

                    <!-- Hidden fields for pagination -->
                    <input type="hidden" name="page" value="1" />
                    <input type="hidden" name="pageSize" value="@ViewBag.PageSize" />

                    <!-- Submit button -->
                    <button type="submit" class="save-button" style="width: 100%; margin-top: 16px; justify-content: center;">
                        <span class="material-symbols-outlined">filter_alt</span>
                        Apply Filters
                    </button>
                </form>
            </aside>

            <!-- Table Section -->
            <section class="table-section">
                <!-- Toolbar -->
                <div class="table-toolbar">
                    <div class="results">
                        <span class="results-number">@Model.Count()</span>
                        <span class="results-text">reviews total</span>
                    </div>

                    <div class="table-controls">
                        <div class="sort-field">
                            <span class="sort-label">Show:</span>
                            <select class="sort-select" onchange="changePageSize(this.value)">
                                <option value="10" selected="@(ViewBag.PageSize == 10)">10 items</option>
                                <option value="25" selected="@(ViewBag.PageSize == 25)">25 items</option>
                                <option value="50" selected="@(ViewBag.PageSize == 50)">50 items</option>
                                <option value="100" selected="@(ViewBag.PageSize == 100)">100 items</option>
                            </select>
                        </div>

                        <div class="divider"></div>

                        <div class="export-buttons">
                            <button class="icon-button" title="Export CSV">
                                <span class="material-symbols-outlined">download</span>
                            </button>
                            <button class="icon-button" title="Print">
                                <span class="material-symbols-outlined">print</span>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Table Wrapper -->
                <div class="table-wrapper">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th class="checkbox-cell">
                                    <label class="checkbox-box">
                                        <input type="checkbox" class="checkbox-input" id="select-all">
                                        <span class="checkbox-check material-symbols-outlined">check</span>
                                    </label>
                                </th>
                                <th>ID</th>
                                <th>User</th>
                                <th>Equipment</th>
                                <th>Rating</th>
                                <th>Comment</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="checkbox-cell">
                                        <label class="checkbox-box">
                                            <input type="checkbox" class="checkbox-input">
                                            <span class="checkbox-check material-symbols-outlined">check</span>
                                        </label>
                                    </td>
                                    <td class="id-cell">@item.Id.ToString()</td>
                                    <td class="name-cell">
                                        <div class="cell-content">
                                            <strong>@(item.User?.Email ?? "Unknown User")</strong>
                                            <span class="cell-description">@item.UserId.Substring(0, Math.Min(8, item.UserId.Length))...</span>
                                        </div>
                                    </td>
                                    <td>
                                        @(item.Equipment?.Name ?? $"Equipment #{item.EquipmentId}")
                                    </td>
                                    <td>
                                        <div class="rating">
                                            @for (int i = 0; i < 5; i++)
                                            {
                                                if (i < item.Rating)
                                                {
                                                    <span class="star-icon material-symbols-outlined" style="color: #fbbf24;">star</span>
                                                }
                                                else
                                                {
                                                    <span class="star-icon material-symbols-outlined" style="color: #cbd5e1;">star</span>
                                                }
                                            }
                                            <span style="margin-left: 4px;">@item.Rating/5</span>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Comment))
                                        {
                                            <div style="max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                                @item.Comment
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td>@item.CreatedAt.ToString("dd MMM yyyy")</td>
                                    <td class="actions-cell">
                                        <div class="action-buttons">
                                            <button class="action-button edit-button" title="Edit" onclick="location.href='@Url.Action("EditReview", "Admin", new { id = item.Id })'">
                                                <span class="material-symbols-outlined">edit</span>
                                            </button>
                                            <button class="action-button delete-button" title="Delete" onclick="location.href='@Url.Action("DeleteReview", "Admin", new { id = item.Id })'">
                                                <span class="material-symbols-outlined">delete</span>
                                            </button>
                                            <button class="action-button view-button" title="View Details" onclick="location.href='@Url.Action("ReviewDetails", "Admin", new { id = item.Id })'">
                                                <span class="material-symbols-outlined">visibility</span>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="pagination">
                    <nav class="pagination-list">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <a href="@Url.Action("Reviews", new { 
                                page = ViewBag.CurrentPage - 1, 
                                pageSize = ViewBag.PageSize,
                                searchString = ViewBag.SearchString,
                                rating = ViewBag.SelectedRating,
                                dateFrom = ViewBag.DateFrom,
                                dateTo = ViewBag.DateTo,
                                hasComment = ViewBag.HasComment,
                                noComment = ViewBag.NoComment
                            })" class="pagination-link">
                                <span class="sr-only">Previous</span>
                                <span class="material-symbols-outlined">chevron_left</span>
                            </a>
                        }

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            if (i == ViewBag.CurrentPage)
                            {
                                <a href="#" class="pagination-link pagination-link-active">@i</a>
                            }
                            else
                            {
                                <a href="@Url.Action("Reviews", new { 
                                    page = i, 
                                    pageSize = ViewBag.PageSize,
                                    searchString = ViewBag.SearchString,
                                    rating = ViewBag.SelectedRating,
                                    dateFrom = ViewBag.DateFrom,
                                    dateTo = ViewBag.DateTo,
                                    hasComment = ViewBag.HasComment,
                                    noComment = ViewBag.NoComment
                                })" class="pagination-link">@i</a>
                            }
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <a href="@Url.Action("Reviews", new { 
                                page = ViewBag.CurrentPage + 1, 
                                pageSize = ViewBag.PageSize,
                                searchString = ViewBag.SearchString,
                                rating = ViewBag.SelectedRating,
                                dateFrom = ViewBag.DateFrom,
                                dateTo = ViewBag.DateTo,
                                hasComment = ViewBag.HasComment,
                                noComment = ViewBag.NoComment
                            })" class="pagination-link">
                                <span class="sr-only">Next</span>
                                <span class="material-symbols-outlined">chevron_right</span>
                            </a>
                        }
                    </nav>
                </div>
            </section>
        </div>
    </div>
</main>

<style>
    .text-muted {
        color: #94a3b8;
        font-style: italic;
    }
    .rating {
        display: flex;
        align-items: center;
        gap: 2px;
    }
    .star-icon {
        font-size: 18px;
        font-variation-settings: 'FILL' 1;
    }
</style>

<script>
    function changePageSize(pageSize) {
        var url = new URL(window.location.href);
        url.searchParams.set('pageSize', pageSize);
        url.searchParams.set('page', 1);
        window.location.href = url.toString();
    }
</script>